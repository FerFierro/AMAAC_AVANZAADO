<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ejercicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight=".2"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            app:ignore="RtlHardcoded,RtlSymmetry,UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv_cv_bloqueado"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:tint="@color/color_familia"
                app:ignore="ContentDescription"
                card_view:srcCompat="@drawable/ic_bloqueado" />

            <TextView
                android:id="@+id/tv_cv_ejercicio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/plantilla_vocal"
                android:textAlignment="center"
                android:textSize="190sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_controles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".8"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/ll_controles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/fab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:background="@drawable/boton_administrador"
                android:clickable="true"
                android:contentDescription="@string/descripciÃ³n_play_musica"
                android:padding="16dp"
                card_view:srcCompat="@drawable/ic_play" />

            <ImageView
                android:id="@+id/fab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:background="@drawable/boton_administrador"
                android:clickable="true"
                android:contentDescription="@string/descripcion_stop_musica"
                android:padding="16dp"
                card_view:srcCompat="@drawable/ic_stop" />

            <ImageButton
                android:id="@+id/Ibtn_cv_ejercicio_siguiente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/descripcion_siguiente"
                card_view:srcCompat="@drawable/ic_siguiente" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>