<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ejercicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:weightSum="1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_weight=".2"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            app:ignore="RtlHardcoded,RtlSymmetry,UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv_cv_bloqueado"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="start"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/color_familia"
                card_view:srcCompat="@drawable/ic_bloqueado"
                app:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_cv_ejercicio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/plantilla_vocal"
                android:textAlignment="center"
                android:textSize="190sp" />
        </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/card_view_controles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".8"
        card_view:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/ll_controles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:layout_margin="10dp"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:fabSize="normal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    card_view:srcCompat="@drawable/ic_play"
                    app:ignore="RtlHardcoded" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:fabSize="normal"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    card_view:srcCompat="@drawable/ic_pause"
                    app:ignore="RtlHardcoded" />

                <ImageButton
                    android:id="@+id/Ibtn_cv_ejercicio_siguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:layout_marginLeft="40dp"
                    card_view:srcCompat="@drawable/ic_siguiente"
                    app:ignore="ContentDescription,RtlHardcoded" />
            </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>